  border-radius: 30rpx;
  height: 270rpx;
  overflow: hidden;
}
.img {
  border-radius: 30rpx;
  overflow: hidden;
}
.img image {
  width: 270rpx;
  height: 270rpx;
}
.info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 20rpx 20rpx;
}
.info .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 42rpx;
}
.info .title text {
  font-size: 24rpx;
  color: #fff;
  background-color: #db0011;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
}
