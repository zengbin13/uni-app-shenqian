  width: 150rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #db0011;
}
.info .price-wrap .price text {
  font-size: 24rpx;
  font-weight: 500;
}
.info .price-wrap .sale {
  font-size: 24rpx;
  color: #999;
